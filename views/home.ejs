<h1>home</h1>
<h2><%= message %></h2>
<div class="firsttimeenter">
  <p>Registered Users can Login here,</p>
  <a href="/user/login"><button type="button">Login</button></a>
  <p>New User, Please Register Here</p>
  <a href="/user/register"><button type="button">Register</button></a>
</div>
<div class="already">
  <div>
    <p>Try Entering into Products</p>
    <a href="/products"><button type="button">Products</button></a>
  </div>
  <div>  
    <p>Try Entering into Products </p>
    <a href="/sellers"><button type="button">Sellers</button></a>
  </div>
  <div> 
    <p>Try Entering into Products </p>
    <a href="/categories"><button type="button">Categories</button></a>
  </div>
</div>

<script>
  $('h2').hide();
  var request = $('h2').text();
  console.log(request);
  if(request === '1'){
    //this session is valid , then show the products, sellers, categories button
    $('.firsttimeenter').hide();
  }
  if(request === '0'){
    //this session is not valid so show login and register
    $('.already').hide();
  }
</script>
