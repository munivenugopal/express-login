<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <link rel="stylesheet" href="/stylesheets/tables.css">
  <title>Products</title>
</head>
<body>
  <a href="/products"><h1>Products Available</h1></a>
  <a href="/products/add"><button type="button">Add New Product</button></a>
  <table>
    <tr>
      <th>ProductID</th>
      <th>ProductName</th>
      <th>Unit</th>
      <th>Price</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
    <% for(var i=0; i<data.length; i++) { %>
    <tr>
      <td><%= data[i]['ProductID'] %></td>
      <td><%= data[i]['ProductName'] %></td>
      <td><%= data[i]['Unit'] %></td>
      <td><%= data[i]['Price'] %></td>
      <td><%= data[i]['name'] %></td>
      <td><a href="/products/edit?productid=<%=data[i]['ProductID']%>"><button type="button">Edit</button></a>
          <a class="delproduct" href="/products/delete?productid=<%=data[i]['ProductID']%>"><button class="delete" type="button">Delete</button></a>
          <a href="/products/view?productid=<%=data[i]['ProductID']%>"><button type="button">View</button></a></td>
    </tr>
   <% } %>
  </table>
  <br>
  <a href="/"><button>Home</button></a>

<script type="text/javascript">
  $('.delete').click(function(){
    var decision = confirm("Are you sure that you want to delete this record from the database?");
    if (decision){

    }
    else{
      $(".delproduct").attr("href","/products");
    }
  });
</script>
</body>
</html>
